<div class="card" style="background: {{bgcolor}}; width: 230px;">
    <div class="card-body">
        <p class="card-text">{{message}}</p>
        <p class="card-text">{{postedby}}</p>
        <p class="card-text"><small class="text-muted">{{timecreated}}</small></p>
        {{#deletePermission}}
        <p class="card-footer text-center">
            {{#showMarkAsRead}}
            <a href="{{{readUrl}}}" role="button">
                {{{readIcon}}}
            </a>
            {{/showMarkAsRead}}
            <a href="{{editUrl}}" role="button">
                {{{editIcon}}}
            </a>
            <a href="{{{deleteUrl}}}" role="button">
                {{{deleteIcon}}}
            </a>
            <input type="checkbox" value="{{id}}" name="message[]">
        </p>
        {{/deletePermission}}
    </div>
</div>
